import noop.Application;
import noop.Console;

// TODO(alex): the import statement above should let us omit the package
class HelloWorld(noop.Console console) implements Application {

  Int main(List args) {
    console.println("Hello World!");
    return 0;
  }

  unittest "Should say hello" binding (Console -> FakeConsole) {
    List l;
    Int result = main(l);
    result should equal(0);
    console.printed should equal("Hello World!");
  }
}
